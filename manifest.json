{
  "name" : "RSize",
  "manifest_version" : 2,
  "version" : "1.0",
  "background": {
    "scripts": ["lib/background.js"],
    "persistent": false
  },
  "icons" : {
    "16" : "icons/icon16.png",
    "48" : "icons/icon16.png",
    "128" : "icons/icon128.png" 
  },

  "browser_action" : {
    "default_popup" : "menu.html"
  },

  "permissions" : [
    "tabs",
    "storage"
  ]
}